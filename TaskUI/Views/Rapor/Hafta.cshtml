@{
    Layout = "_Layout";
    @model List<Gorev>;

}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Kaç Günlük</th>
            <th scope="col">Oluşturulma Tarihi</th>
            <th scope="col">Yapılacak</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gorev in Model)
        {
            <tr>
                <th scope="row">@gorev.id</th>
                <td>@gorev.baslik</td>
                <td>@gorev.olusturulma.ToString("dd.MM.yyyy")</td>
                <td>@gorev.yazigirin</td>

                <td>
                    <div class="form-check">

                        @{
                            if (gorev.tamamlandi == true)
                            {
                                <input type="checkbox" name="Veri" checked disabled />
                                ;
                            }
                            else
                            {
                                <input type="checkbox" name="Veri" disabled />
                            }
                        }
                        <label class="form-check-label" for="flexCheckDefault">
                            Tamamlandı
                        </label>
                    </div>
                </td>




            </tr>
        }
    </tbody>
</table>